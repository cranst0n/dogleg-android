<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="@dimen/padding_eight">

    <ImageView
        android:id="@+id/hole_feature_image"
        android:layout_width="@dimen/text_size_twenty_four"
        android:layout_height="@dimen/text_size_twenty_four"
        android:layout_margin="@dimen/margin_four"
        android:src="@drawable/grass"/>

    <TextView
        android:id="@+id/feature_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/hole_feature_image"
        android:layout_marginTop="@dimen/margin_two"
        android:layout_marginLeft="@dimen/margin_six"
        android:text="Card title"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/text_size_twelve"/>

    <TextView
        android:id="@+id/feature_distances"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/hole_feature_image"
        android:layout_below="@+id/feature_name"
        android:layout_marginLeft="@dimen/margin_ten"
        android:text="Card description"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/text_size_ten"/>

    <TextView
        android:id="@+id/feature_elevation_difference"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/feature_distances"
        android:background="@android:color/transparent"
        android:layout_marginTop="@dimen/margin_eight"
        android:layout_marginRight="@dimen/margin_eight"
        android:padding="0dp"
        android:gravity="center_vertical|right"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/text_size_ten"
        android:text=""/>

</RelativeLayout>