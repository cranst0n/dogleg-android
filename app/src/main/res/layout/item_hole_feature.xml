<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="@dimen/padding_four"
              android:paddingBottom="@dimen/padding_four"
              android:paddingLeft="@dimen/padding_eight"
              android:paddingRight="@dimen/padding_eight"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/hole_feature_image"
            android:layout_width="@dimen/text_size_twenty_four"
            android:layout_height="@dimen/text_size_twenty_four"
            android:layout_margin="@dimen/margin_four"
            android:src="@drawable/dogleg"/>

        <TextView
            android:id="@+id/feature_elevation_difference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginLeft="@dimen/margin_four"
            android:layout_marginRight="@dimen/margin_four"
            android:padding="0dp"
            android:gravity="center"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_ten"
            android:text="+12m"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/feature_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/hole_feature_image"
            android:layout_marginTop="@dimen/margin_two"
            android:layout_marginLeft="@dimen/margin_six"
            android:textColor="@color/text_grey"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_ten"
            android:text="Feature name"/>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/feature_name"
            android:layout_marginLeft="@dimen/margin_twelve"
            android:layout_toRightOf="@id/feature_elevation_difference"
            android:rowCount="3"
            android:columnCount="2">

            <TextView
                android:id="@+id/feature_distance_1_label"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginRight="@dimen/margin_four"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_ten"
                android:text="Reach"/>

            <TextView
                android:id="@+id/feature_distance_1"
                android:layout_row="0"
                android:layout_column="1"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_ten"/>

            <TextView
                android:id="@+id/feature_distance_2_label"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginRight="@dimen/margin_four"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_ten"/>

            <TextView
                android:id="@+id/feature_distance_2"
                android:layout_row="1"
                android:layout_column="1"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_ten"/>

            <TextView
                android:id="@+id/feature_distance_3_label"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginRight="@dimen/margin_four"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_ten"/>

            <TextView
                android:id="@+id/feature_distance_3"
                android:layout_row="2"
                android:layout_column="1"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_ten"/>

        </GridLayout>

    </LinearLayout>

</LinearLayout>