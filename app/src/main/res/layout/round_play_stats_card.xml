<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="@dimen/elevation_ten"
    card_view:cardCornerRadius="0px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/primary">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_chart_line"/>

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_eight">

            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_four"
                    android:textSize="@dimen/play_round_stat_size"
                    android:text="Putts:"/>

                <TextView
                    android:id="@+id/round_putts_stat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_four"
                    android:layout_weight="1"
                    android:textSize="@dimen/play_round_stat_size"
                    android:text="0"/>

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_four"
                    android:textSize="@dimen/play_round_stat_size"
                    android:text="Putt Average:"/>

                <TextView
                    android:id="@+id/round_putts_average_stat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_four"
                    android:layout_weight="1"
                    android:textSize="@dimen/play_round_stat_size"
                    android:text="0.00"/>

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_four"
                    android:textSize="@dimen/play_round_stat_size"
                    android:text="Fairways:"/>

                <TextView
                    android:id="@+id/round_fairway_stats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_four"
                    android:layout_weight="1"
                    android:textSize="@dimen/play_round_stat_size"
                    android:text="0.00%"/>

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_four"
                    android:textSize="@dimen/play_round_stat_size"
                    android:text="GIR:"/>

                <TextView
                    android:id="@+id/round_gir_stats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_four"
                    android:layout_weight="1"
                    android:textSize="@dimen/play_round_stat_size"
                    android:text="0.00%"/>

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_four"
                    android:textSize="@dimen/play_round_stat_size"
                    android:text="Par 3's:"/>

                <TextView
                    android:id="@+id/round_par3_stats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_four"
                    android:layout_weight="1"
                    android:textSize="@dimen/play_round_stat_size"
                    android:text="0.00"/>

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_four"
                    android:textSize="@dimen/play_round_stat_size"
                    android:text="Par 4's:"/>

                <TextView
                    android:id="@+id/round_par4_stats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_four"
                    android:layout_weight="1"
                    android:textSize="@dimen/play_round_stat_size"
                    android:text="0.00"/>

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_four"
                    android:textSize="@dimen/play_round_stat_size"
                    android:text="Par 5's:"/>

                <TextView
                    android:id="@+id/round_par5_stats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_four"
                    android:layout_weight="1"
                    android:textSize="@dimen/play_round_stat_size"
                    android:text="0.00"/>

            </TableRow>

        </TableLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>