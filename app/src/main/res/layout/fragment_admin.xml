<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/eight"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/padding_eight"
        android:focusableInTouchMode="true">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_four"
            android:layout_marginBottom="@dimen/margin_two"
            android:layout_marginLeft="@dimen/margin_four"
            android:layout_marginRight="@dimen/margin_four"
            android:elevation="@dimen/elevation_ten"
            card_view:cardCornerRadius="0px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/padding_eight"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_sixteen"
                    android:textStyle="bold"
                    android:text="Create Account"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/margin_eight"
                    android:layout_marginLeft="@dimen/margin_eight"
                    android:background="@color/text_light_grey"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_eight"
                    android:rowCount="6"
                    android:columnCount="2">

                    <TextView
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_marginRight="@dimen/margin_sixteen"
                        android:text="Username"/>

                    <EditText
                        android:id="@+id/username_field"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:minWidth="150dp"/>

                    <TextView
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_marginRight="@dimen/margin_sixteen"
                        android:text="Password"/>

                    <EditText
                        android:id="@+id/password_field"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:minWidth="150dp"
                        android:inputType="textPassword"/>

                    <TextView
                        android:layout_row="2"
                        android:layout_column="0"
                        android:layout_marginRight="@dimen/margin_sixteen"
                        android:text="Confirm Password"/>

                    <EditText
                        android:id="@+id/password_confirm_field"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:minWidth="150dp"
                        android:inputType="textPassword"/>

                    <TextView
                        android:layout_row="3"
                        android:layout_column="0"
                        android:layout_marginRight="@dimen/margin_sixteen"
                        android:text="E-mail"/>

                    <EditText
                        android:id="@+id/email_field"
                        android:layout_row="3"
                        android:layout_column="1"
                        android:minWidth="150dp"
                        android:inputType="textEmailAddress"/>

                    <TextView
                        android:layout_row="4"
                        android:layout_column="0"
                        android:layout_marginTop="@dimen/margin_eight"
                        android:layout_marginRight="@dimen/margin_sixteen"
                        android:text="Administrator"/>

                    <CheckBox
                        android:id="@+id/administrator_box"
                        android:layout_row="4"
                        android:layout_column="1"
                        android:layout_marginTop="@dimen/margin_eight"
                        android:textColor="@color/text_grey"/>

                    <Button
                        android:id="@+id/create_account_button"
                        android:layout_row="5"
                        android:layout_column="0"
                        android:layout_columnSpan="2"
                        android:layout_marginTop="@dimen/margin_sixteen"
                        android:layout_gravity="center"
                        android:text="Create Account"/>

                </GridLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_eight"
            android:layout_marginBottom="@dimen/margin_two"
            android:layout_marginLeft="@dimen/margin_four"
            android:layout_marginRight="@dimen/margin_four"
            android:elevation="@dimen/elevation_ten"
            card_view:cardCornerRadius="0px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/padding_eight"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_sixteen"
                    android:textStyle="bold"
                    android:text="Reset Password"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/margin_eight"
                    android:layout_marginLeft="@dimen/margin_eight"
                    android:background="@color/text_light_grey"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_eight"
                    android:rowCount="4"
                    android:columnCount="2">

                    <TextView
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_marginRight="@dimen/margin_sixteen"
                        android:text="User"/>

                    <AutoCompleteTextView
                        android:id="@+id/username_search_field"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:minWidth="150dp"/>

                    <TextView
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_marginRight="@dimen/margin_sixteen"
                        android:text="Password"/>

                    <EditText
                        android:id="@+id/reset_password_field"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:minWidth="150dp"
                        android:inputType="textPassword"/>

                    <TextView
                        android:layout_row="2"
                        android:layout_column="0"
                        android:layout_marginRight="@dimen/margin_sixteen"
                        android:text="Confirm Password"/>

                    <EditText
                        android:id="@+id/reset_password_confirm_field"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:minWidth="150dp"
                        android:inputType="textPassword"/>

                    <Button
                        android:id="@+id/reset_password_button"
                        android:layout_row="3"
                        android:layout_column="0"
                        android:layout_columnSpan="2"
                        android:layout_marginTop="@dimen/margin_sixteen"
                        android:layout_gravity="center"
                        android:text="Reset Password"/>

                </GridLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>