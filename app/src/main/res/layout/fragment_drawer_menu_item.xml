<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/fragment_drawerMenu_comp_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_sixteen"
                android:background="@android:color/white"
                tools:context=".DrawerMenuComp">

    <ImageView
        android:id="@+id/fragment_drawerMenu_comp_icon"
        android:layout_width="@dimen/twenty_eight"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/margin_eight"/>

    <TextView
        android:id="@+id/fragment_drawerMenu_comp_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/drawer_text"
        android:layout_toRightOf="@id/fragment_drawerMenu_comp_icon"
        tools:text="Menu"/>

</RelativeLayout>