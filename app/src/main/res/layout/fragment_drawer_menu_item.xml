<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_sixteen"
                android:paddingBottom="@dimen/padding_sixteen"
                android:paddingLeft="@dimen/padding_sixteen"
                android:background="@android:color/white"
                tools:context=".DrawerMenuComp">

    <ImageView
        android:id="@+id/drawer_menu_item_icon"
        android:layout_width="@dimen/twenty_eight"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/margin_eight"
        android:src="@drawable/ic_action_settings"/>

    <TextView
        android:id="@+id/drawer_menu_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/drawer_text"
        tools:text="Menu"/>

    <TextView
        android:id="@+id/drawer_menu_item_experimental_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/margin_eight"
        android:paddingTop="@dimen/padding_two"
        android:paddingBottom="@dimen/padding_two"
        android:paddingLeft="@dimen/padding_sixteen"
        android:paddingRight="@dimen/padding_sixteen"
        android:background="@color/experimental"
        android:textSize="@dimen/text_size_ten"
        android:textColor="@android:color/white"
        android:text="Experimental"
        android:visibility="gone"/>

</LinearLayout>