<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/eight"
    android:fillViewport="true"
    android:keepScreenOn="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_eight"
        android:orientation="vertical"
        android:keepScreenOn="true">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_four"
            android:elevation="@dimen/elevation_ten"
            card_view:cardCornerRadius="0px">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_eight"
                android:text="@string/shot_caddy_intro"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_four"
            android:layout_marginBottom="@dimen/margin_two"
            android:layout_marginLeft="@dimen/margin_four"
            android:layout_marginRight="@dimen/margin_four"
            android:elevation="@dimen/elevation_ten"
            card_view:cardCornerRadius="0px">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_eight"
                android:rowCount="2"
                android:columnCount="2">

                <RadioButton
                    android:id="@+id/nfc_write_mode_button"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginRight="@dimen/margin_sixteen"
                    android:checked="true"
                    android:text="Write"/>

                <Button
                    android:id="@+id/club_selection_button"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:background="@drawable/border_accent"
                    android:textColor="@color/accent"
                    android:text="Select Club"/>

                <RadioButton
                    android:id="@+id/nfc_read_mode_button"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:text="Read"/>

            </GridLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>