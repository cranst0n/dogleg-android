<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_four"
                android:orientation="horizontal">

    <ImageView
        android:id="@+id/shot_image"
        android:layout_width="@dimen/text_size_twenty_four"
        android:layout_height="@dimen/text_size_twenty_four"
        android:layout_margin="@dimen/margin_four"
        android:layout_gravity="center"
        android:src="@drawable/ic_tee"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/club_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/hole_feature_image"
            android:layout_marginTop="@dimen/margin_two"
            android:layout_marginLeft="@dimen/margin_six"
            android:textColor="@color/text_grey"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_ten"
            android:text="4 Iron"/>

        <TextView
            android:id="@+id/shot_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_twelve"
            android:layout_marginRight="@dimen/margin_four"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_ten"
            android:text="211 yards"/>

    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <ImageButton
        android:id="@+id/remove_shot_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_content_clear_grey"/>

</LinearLayout>