<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingTop="@dimen/padding_eight"
              android:focusableInTouchMode="true">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_four"
        android:layout_marginBottom="@dimen/margin_two"
        android:layout_marginLeft="@dimen/margin_four"
        android:layout_marginRight="@dimen/margin_four"
        android:elevation="@dimen/elevation_ten"
        card_view:cardCornerRadius="0px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_eight"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_sixteen"
                android:textStyle="bold"
                android:text="Request New Course"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_eight"
                android:layout_marginLeft="@dimen/margin_eight"
                android:background="@color/text_light_grey"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_eight"
                android:rowCount="7"
                android:columnCount="2">

                <TextView
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginRight="@dimen/margin_sixteen"
                    android:text="Name"/>

                <EditText
                    android:id="@+id/course_request_name"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="fill"/>

                <TextView
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_marginRight="@dimen/margin_sixteen"
                    android:text="City"/>

                <EditText
                    android:id="@+id/course_request_city"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_gravity="fill"/>

                <TextView
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_marginRight="@dimen/margin_sixteen"
                    android:text="State"/>

                <EditText
                    android:id="@+id/course_request_state"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_gravity="fill"/>

                <TextView
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_marginRight="@dimen/margin_sixteen"
                    android:text="Country"/>

                <EditText
                    android:id="@+id/course_request_country"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_gravity="fill"/>

                <TextView
                    android:layout_row="4"
                    android:layout_column="0"
                    android:layout_marginRight="@dimen/margin_sixteen"
                    android:text="Website"/>

                <EditText
                    android:id="@+id/course_request_website"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:layout_gravity="fill"
                    android:inputType="textUri"/>

                <TextView
                    android:layout_row="5"
                    android:layout_column="0"
                    android:layout_marginRight="@dimen/margin_sixteen"
                    android:text="Comment"/>

                <EditText
                    android:id="@+id/course_request_comment"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:layout_gravity="fill"
                    android:inputType="textMultiLine"
                    android:lines="2"/>

                <Button
                    android:id="@+id/request_course_button"
                    android:layout_row="6"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_marginTop="@dimen/margin_sixteen"
                    android:layout_gravity="center"
                    android:text="Submit Request"/>

            </GridLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>